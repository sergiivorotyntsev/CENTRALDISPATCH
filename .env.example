# =============================================================================
# Vehicle Transport Automation - Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Provider: "imap" for standard IMAP, "graph" for Microsoft Graph API
EMAIL_PROVIDER=imap

# IMAP Settings (for EMAIL_PROVIDER=imap)
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_ADDRESS=info@y7agency.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FOLDER=INBOX
EMAIL_CHECK_INTERVAL=60

# Optional: Filter emails
# EMAIL_FROM_FILTER=noreply@copart.com
# EMAIL_SUBJECT_FILTER=Receipt

# Microsoft 365 / Graph API Settings (for EMAIL_PROVIDER=graph)
# Required when basic auth is blocked by M365 security policies
# EMAIL_TENANT_ID=your-tenant-id
# EMAIL_CLIENT_ID=your-client-id
# EMAIL_CLIENT_SECRET=your-client-secret

# -----------------------------------------------------------------------------
# ClickUp Configuration (REQUIRED)
# -----------------------------------------------------------------------------
CLICKUP_TOKEN=pk_your_token_here
CLICKUP_LIST_ID=901317344729

# Optional: Custom field IDs for stable binding (get from ClickUp API)
# CLICKUP_FIELD_ID_VIN=abc123
# CLICKUP_FIELD_ID_LOT=def456
# CLICKUP_FIELD_ID_GATE_PASS=ghi789
# CLICKUP_FIELD_ID_AUCTION=jkl012
# CLICKUP_FIELD_ID_PICKUP_ADDRESS=mno345

# -----------------------------------------------------------------------------
# Google Sheets Configuration (OPTIONAL - for audit log & CD queue)
# -----------------------------------------------------------------------------
SHEETS_ENABLED=false
SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here
SHEETS_SHEET_NAME=Pickups
SHEETS_CREDENTIALS_FILE=credentials.json
SHEETS_TOKEN_FILE=token.json

# -----------------------------------------------------------------------------
# Warehouse Routing Configuration
# -----------------------------------------------------------------------------
WAREHOUSE_ENABLED=true
WAREHOUSE_DATA_FILE=warehouses.yaml

# Geocoding: "google" (requires API key) or "nominatim" (free, rate-limited)
GEOCODE_PROVIDER=nominatim
# GEOCODE_API_KEY=your-google-maps-api-key

# Distance calculation: "driving" (requires Google API) or "haversine" (approximate)
DISTANCE_MODE=haversine

# Cache database for geocoding results
GEOCODE_CACHE_DB=geocode_cache.db

# -----------------------------------------------------------------------------
# Central Dispatch Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
CD_ENABLED=false
CD_CLIENT_ID=your-client-id
CD_CLIENT_SECRET=your-client-secret
CD_MARKETPLACE_ID=10000

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Path to idempotency SQLite database
IDEMPOTENCY_DB_PATH=processed_emails.db

# Temp directory for PDF processing
TEMP_DIR=/tmp/dispatch

# -----------------------------------------------------------------------------
# Runtime Settings
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: "text" for human-readable, "json" for structured
LOG_FORMAT=text

# Dry run mode: set to true to skip creating ClickUp tasks
DRY_RUN=false
